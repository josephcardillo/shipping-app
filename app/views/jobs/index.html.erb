<h2> All Jobs</h2>
<div class="column boat-job-div2">
  <% @jobs.each do |job| %>
  <% if job.shipper_id == current_shipper.id %>
    <p>Job title: <%= link_to job.title, edit_job_path(job) %></p>
    <p>Job description: <%= job.description %></p>
    <p>Origin: <%= job.origin %></p>
    <p>Destination: <%= job.destination %></p>
    <p>Cost: $<%= job.cost %></p>
    <p>Containers Needed: <%= job.containers_needed %></p>
    <hr>
    <% end %>
  <% end %>
</div>
