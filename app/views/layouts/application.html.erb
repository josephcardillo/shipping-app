<!DOCTYPE html>
<html>
  <head>
    <title>ShippingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>

  <body>

    <header>
      <div class="navbar">
        <% if current_shipper %>
          <ul>
            <li><%=link_to("Dashboard", shipper_dash_path(current_shipper), class: "nav-item nav-link") %></li>
            <li><%=link_to("Create Job", new_job_path, class: "nav-item nav-link") %></li>
            <li><%=link_to("Create Boat", new_boat_path, class: "nav-item nav-link") %></li>
          </ul>
        <% end %>
      </div>
    </header>

        <%= link_to 'Sign Out', destroy_shipper_session_path, method: :delete %>

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= yield %>

    <script>



      $(document).ready(function(){
      $('#boat-toggle').change(function() {
        if(this.options[this.selectedIndex].text == "The Bee") {
          $('.boat-show').val('');
          $('.boat-show').show();
        } else {
          $('.boat-show').val(this.innerText);
          $('.boat-show').hide();
        }
        console.dir(this);
        console.log(this.options[this.selectedIndex].text);
      });
    });
    </script>

  </body>
</html>
