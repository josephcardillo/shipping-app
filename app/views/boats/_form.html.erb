<%= form_for @boat do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :location %>
    <%= f.select :location, boats_location%>
    <%= f.label :container_volume %>
    <%= f.text_field :container_volume %>
    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar %>
    </div>
    <%= f.submit %>
  <% end %>




<!-- form_with assumes ajax request with form -->
