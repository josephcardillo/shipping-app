<%= form_for @boat do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.select :location, ['Philadelphia', 'New York', 'Shanghai', 'Hong Kong', 'Hamburg', 'Los Angeles', 'Ho Chi Minh']%>

    <%= f.label :container_volume %>
    <%= f.text_field :container_volume %>
    <div class="field">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar %>
    </div>
    <%= f.submit %>
  <% end %>




<!-- form_with assumes ajax request with form -->
